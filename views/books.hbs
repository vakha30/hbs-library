{{> header }}
<div class="container">
    <div class="row justify-content-center">

    {{#each books}}
        
        <div class="card bg-dark text-light m-3 text-center" style="width: 18rem;">
            <div class='box'><img src={{image}} class="card-img-top img-fluid" alt="..." /></div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title mb-3">{{name}}</h5>
                <p class="book-card-description">{{description}}</p>
                <a href="/books/user/{{userId}}/book/{{_id}}" class="btn btn-primary">Выбрать</a>
            </div>
        </div>
        
    {{/each}}

    </div>
</div>