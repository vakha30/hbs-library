{{> header }}

{{#with book}}
<div class="">
<div class="container pt-5">
    <div class="card mb-3 bg-secondary" style="max-width: 100%; border: none">
        <div class="row g-0">
            <div class="col-md-4">
                <img src={{image}} class="w-100" alt="...">
            </div>
            <div class="col-md-8 ">
                <div class="card-body text-dark">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
                <div class="p-3" >
                    <a href="/books/user/{{userId}}" class="btn btn-danger ">Назад</a>
                    
                    {{#if isArend}}
                        <h4 class="text-warning">Уже в прокате</h4>
                    {{else}}
                        <a href="/books/user/{{userId}}/book/{{_id}}/rent" class="btn btn-success">Взять в прокат</a>
                    {{/if}}
                    {{#if limit}}
                        <h4 class="text-warning">Максимально можно иметь только 3 книги</h4>
                    {{/if}}
                    {{#if isBlocked}}
                        <h4 class="text-warning">Вы забанены</h4>
                    {{/if}}
                </div>
                <form action="/reviews/user/{{userId}}/book/{{_id}}" method="POST" class="p-3">
                    <div class="mb-3">
                        <div class="panel">
                            <div class="panel-body">
                                <textarea class="form-control" rows="2" name="text" placeholder="Добавьте Ваш комментарий"></textarea>
                                <div class="mar-top clearfix">
                                    <button class="btn btn-sm btn-primary pull-right" type="submit"><i class="fa fa-pencil fa-fw"></i> Добавить</button>
                                    <a class="btn btn-secondary btn-icon fa fa-video-camera add-tooltip" href="#"></a>
                                    <a class="btn btn-secondary btn-icon fa fa-camera add-tooltip" href="#"></a>
                                    <a class="btn btn-secondary btn-icon fa fa-file add-tooltip" href="#"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{#each comments}}
         <div class="media-block m-3">
            <a class="media-left" href="#"><img class="img-circle img-sm m-2" alt="Профиль пользователя" src={{user.avatar}}>
            </a>
            <div class="media-body">
                <div class="mar-btm">
                    <a href="#" class="btn-link text-warning media-heading box-inline">{{user.name}}</a>
                    <p class="text-muted text-sm"><i class="fa fa-globe fa-lg"></i>{{date}}</p>
                </div>
                <p>{{text}}</p>
                <div class="pad-ver">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-default btn-hover-success" href="#"><i class="fa fa-thumbs-up"></i></a>
                        <a class="btn btn-sm btn-default btn-hover-danger" href="#"><i class="fa fa-thumbs-down"></i></a>
                    </div>
                    <a class="btn btn-sm btn-default btn-hover-primary" href="#">Ответить</a>
                </div>
                <hr>
            </div>
        </div>
    {{else}}
        <h5>Комментариев нету</h5>
    {{/each}}
</div>


{{/with}}